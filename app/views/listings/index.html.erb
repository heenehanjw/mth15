<br><br><br><br>
<div class="jumbotron" >
  <h1>Monica's Portfolio</h1>
  <h2>Creations from the Kitchen!</h2>
</div>

<div class="center">
  <!-- Below are bootstrap methods to create 4 columns per row  -->
  <div class="row">
   <% @listings.each do |listing| %>
    <div class="col-md-3">
       <div class="thumbnail">
       <%= link_to image_tag(listing.image.url), listing %>   
       
        <div class="caption">
          <h3><%= listing.name %></h3>
          <%= link_to 'Show', listing, class:"btn btn-link" %>
        </div>
      </div>	
    </div>
   <% end %>
  </div>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Item', new_listing_path, class:"btn btn-link" %>
<% end %>
